                    @Html.TextBoxFor(model => model.number_P, new { @class = "form-control", @placeholder = " Number of participants", style = "width: 350px" })
                </div>

                <div class="col-md-10">
                    @Html.EditorFor(model => model.DateEvent, new { htmlAttributes = new { @class = "form-control", @placeholder = "DateEvent", style = "width:350px" } })
