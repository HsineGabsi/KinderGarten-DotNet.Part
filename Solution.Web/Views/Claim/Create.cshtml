
@model Solution.Web.Models.ClaimModel

@{
    ViewBag.Title = "Create";

}
<body>
    <section id="authorization_page" class="authorization_page">
        <div class="container">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10 dot">
                    <h2 class="section-title">Create claim</h2>
                </div>
                <div class="col-md-1"></div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="sidebar">
                        <div class="categories b_green">
                            <h4 class="title">My profile</h4>
                            <ul>
                                <li><a href="@Url.Action("indexfront","Claim")">My claims</a></li>
                                <li><a href="@Url.Action("indexfront","Reputation")"> My reputations</a></li>
                            </ul>
                        </div>

                    </div>
                </div>
                <div class="col-md-5">
                    @using (Html.BeginForm("Create", "Claim", htmlAttributes: new { id = "createform" }, method: FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="reg_box">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Claim name" })
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = "3", cols = "3", @placeholder = "Description" })

                            @Html.DropDownListFor(m => m.ClaimType, new List<SelectListItem>
                  { new SelectListItem{Text="On_Teachers", Value="On_Teachers" },
                    new SelectListItem{Text="On_KinderGarten", Value="On_KinderGarten"},
                     new SelectListItem{Text="On_Services", Value="On_Services"},
                     new SelectListItem{Text="Other", Value="Other"},
                    }, "Choose Type", new { @class = "form-control" })
                            @Html.HiddenFor(m => m.status)
                        </div>

                        <button type="submit" id="toastr" onclick="create()" class="btn btn-primary animated  fadeIn infinite delay-1s">Submit<i class="icon-paperplane ml-2"></i></button>
                    }
                    <script>
                        var form = document.getElementById('createform');

                        function myFunction() {
                            if (form.checkValidity()) {
                                alert("Your claim was successufully created");
                            }
                        }
                    </script>
                </div>
            </div>
        </div>

    </section>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />


</body>
